<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="backListener"
            type="com.ess.localsetting.clickinterface.IBackListener" />

        <variable
            name="listener"
            type="com.ess.localsetting.clickinterface.IUserCommonSettingsListener" />

        <variable
            name="titleName"
            type="java.lang.String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/device_setting_bg">

        <include
            android:id="@+id/title"
            layout="@layout/activity_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:listener="@{backListener}"
            bind:titleName="@{titleName}" />

        <ImageButton
            android:id="@+id/btn_auto_pos"
            android:layout_width="@dimen/qb_px_42"
            android:layout_height="@dimen/qb_px_42"
            android:layout_marginStart="@dimen/qb_px_35"
            android:layout_marginTop="@dimen/qb_px_27"
            android:background="@mipmap/user_comment_setting_auto_pos"
            android:onClick="@{()->listener.autoPosClick()}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/btn_imput"
            android:layout_width="@dimen/qb_px_42"
            android:layout_height="@dimen/qb_px_42"
            android:layout_marginTop="@dimen/qb_px_27"
            android:layout_marginEnd="@dimen/qb_px_35"
            android:background="@mipmap/user_comment_setting_input"
            android:onClick="@{()->listener.manualInputClick()}"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/btn_map_pos"
            android:layout_width="@dimen/qb_px_42"
            android:layout_height="@dimen/qb_px_42"
            android:layout_marginTop="@dimen/qb_px_27"
            android:background="@mipmap/user_comment_setting_map_pos"
            android:onClick="@{()->listener.mapPosClick()}"
            app:layout_constraintLeft_toRightOf="@+id/btn_auto_pos"
            app:layout_constraintRight_toLeftOf="@+id/btn_imput"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_auto_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_pos"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/btn_auto_pos"
            app:layout_constraintRight_toRightOf="@+id/btn_auto_pos"
            app:layout_constraintTop_toBottomOf="@+id/btn_auto_pos"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_map_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_pos"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/btn_map_pos"
            app:layout_constraintRight_toRightOf="@+id/btn_map_pos"
            app:layout_constraintTop_toBottomOf="@+id/btn_map_pos"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_imput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manual_input"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/btn_imput"
            app:layout_constraintRight_toRightOf="@+id/btn_imput"
            app:layout_constraintTop_toBottomOf="@+id/btn_imput"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_show"
            android:layout_width="@dimen/qb_px_0"
            android:layout_height="@dimen/qb_px_346"
            android:layout_marginStart="@dimen/qb_px_15"
            android:layout_marginTop="@dimen/qb_px_29"
            android:layout_marginEnd="@dimen/qb_px_15"
            android:background="@drawable/device_recycler_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_map_pos">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_show_position"
                android:layout_width="@dimen/qb_px_230"
                android:layout_height="@dimen/qb_px_230"
                android:layout_marginTop="@dimen/qb_px_23"
                android:background="@drawable/user_comment_setting_positing_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_show_position2"
                    android:layout_width="@dimen/qb_px_186"
                    android:layout_height="@dimen/qb_px_186"
                    android:layout_marginTop="@dimen/qb_px_23"
                    android:background="@drawable/user_comment_setting_positing2_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_longitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/qb_px_57"
                        android:text="23'23'23'"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/tv_latitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/qb_px_57"
                        android:text="23'23'23'"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_time_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_19"
                android:text="时区"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_show_position"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_select_time_zone"
                android:layout_width="@dimen/qb_px_90"
                android:layout_height="@dimen/qb_px_28"
                android:layout_marginTop="@dimen/qb_px_10"
                android:background="@drawable/user_comment_setting_time_zone_bg"
                android:gravity="center"
                android:text="+12"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_time_zone"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_net_setting"
            android:layout_width="@dimen/qb_px_0"
            android:layout_height="@dimen/qb_px_43"
            android:layout_marginStart="@dimen/qb_px_15"
            android:layout_marginTop="@dimen/qb_px_19"
            android:layout_marginEnd="@dimen/qb_px_15"
            android:background="@drawable/device_recycler_bg"
            android:onClick="@{()->listener.netSettingsClick()}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_show"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_net_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/qb_px_8"
                android:text="@string/net_setting"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/qb_px_12"
                android:src="@mipmap/back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_net_setting"
            android:layout_width="@dimen/qb_px_0"
            android:layout_height="@dimen/qb_px_209"
            android:layout_marginStart="@dimen/qb_px_24"
            android:layout_marginEnd="@dimen/qb_px_24"
            android:background="@drawable/user_comment_setting_recycler_bg"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_net_setting"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
