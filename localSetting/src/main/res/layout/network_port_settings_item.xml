<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_187"
    android:background="@drawable/device_recycler_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/qb_px_42"
        android:layout_height="@dimen/qb_px_42"
        android:layout_marginStart="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_12" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_24"
        android:text="名字"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/ed_input_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_33"
        android:layout_marginStart="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_39"
        android:layout_marginEnd="@dimen/qb_px_12"
        android:background="@drawable/network_port_input_ed_bg"
        android:hint="@string/input_value"
        android:lines="1"
        android:paddingStart="@dimen/qb_px_12"
        android:textColorHint="@color/white"
        android:textSize="13sp"
        tools:ignore="MissingConstraints" />

</LinearLayout>

