<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_76"
    android:background="#40000000">

    <View
        android:id="@+id/round_dot"
        android:layout_width="@dimen/qb_px_10"
        android:layout_height="@dimen/qb_px_10"
        android:layout_marginStart="@dimen/qb_px_24"
        android:background="@drawable/device_round_dot_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iv_connect_statue"
        android:layout_width="@dimen/qb_px_10"
        android:layout_height="@dimen/qb_px_10"
        android:layout_marginEnd="@dimen/qb_px_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/qb_px_9"
        android:layout_marginEnd="@dimen/qb_px_24"
        android:text="设备"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/round_dot"
        app:layout_constraintRight_toLeftOf="@+id/iv_connect_statue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="@dimen/qb_px_9"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>

