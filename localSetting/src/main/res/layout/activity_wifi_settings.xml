<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="backListener"
            type="com.ess.localsetting.clickinterface.IBackListener" />

        <variable
            name="connectWifiInfo"
            type="com.ess.localsetting.bean.WifiInfo" />

        <variable
            name="titleName"
            type="java.lang.String" />

        <import type="com.ess.localsetting.bean.WifiInfo" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/device_setting_bg">

        <include
            android:id="@+id/title"
            layout="@layout/activity_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:listener="@{backListener}"
            bind:titleName="@{titleName}" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_show_result"
            android:layout_width="@dimen/qb_px_0"
            android:layout_height="@dimen/qb_px_112"
            android:layout_marginStart="@dimen/qb_px_30"
            android:layout_marginTop="@dimen/qb_px_28"
            android:layout_marginEnd="@dimen/qb_px_30"
            android:background="@drawable/device_recycler_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/qb_px_15"
                android:layout_marginTop="@dimen/qb_px_17"
                android:layout_marginEnd="@dimen/qb_px_15"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@{connectWifiInfo.name}"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_connection_suc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/qb_px_15"
                android:layout_marginTop="@dimen/qb_px_8"
                android:layout_marginEnd="@dimen/qb_px_15"
                android:gravity="center"
                android:text="@string/connect_suc"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="@{connectWifiInfo.connectStatus == WifiInfo.CONNECT ? View.VISIBLE:View.GONE}"
                app:layout_constraintTop_toBottomOf="@+id/tv_tips" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_513"
            android:layout_marginStart="@dimen/qb_px_15"
            android:layout_marginTop="@dimen/qb_px_80"
            android:layout_marginEnd="@dimen/qb_px_15"
            app:cardBackgroundColor="#ff1f4b8f"
            app:cardCornerRadius="@dimen/qb_px_10"
            app:cardElevation="@dimen/qb_px_10"
            app:cardMaxElevation="@dimen/qb_px_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cl_show_result">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_wifi_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/qb_px_12"
                android:layout_marginBottom="@dimen/qb_px_12"
                tools:ignore="MissingConstraints" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
